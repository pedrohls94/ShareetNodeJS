<!DOCTYPE html>
<html>
    <head>
        <% include ejs/head.ejs %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="css/w3style.css">
        <link rel="stylesheet" href="css/modals.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src="js/notify.js"></script>
        <style>
            body,h1,h2,h3,h4,h5,h6 {font-family: "Lato", sans-serif}
            .w3-bar,h1,button {font-family: "Montserrat", sans-serif}
            .fa-anchor,.fa-coffee,.fa-briefcase,.fa-cubes {font-size:200px}
        </style>
        <script>
            window.onclick = function(event) {
                var singUpModal = document.getElementById('signUpModal');
                var loginModal = document.getElementById('loginModal');
                if (event.target == loginModal || event.target == signUpModal) {
                    signUpModal.style.display = "none";
                    loginModal.style.display = "none";
                }
            }
        </script>
        <script>
        window.onload = function(){
            <% if(locals.success) { %>
            $.notify("<%= success %>", { className:"success", position:"top right" });
            <% } %>
            <% if(locals.error) { %>
            $.notify("<%= error %>", { className:"error", position:"top right" });
            <% } %>
        }
        </script>
    </head>

    <body>

    <!-- Header -->
    <header class="w3-container w3-red w3-center" style="padding:128px 16px">
      <h1 class="w3-margin w3-jumbo">Shareet</h1>
      <p class="w3-xlarge"><%=strings.Index_Slogan%></p>
      <button onclick="document.getElementById('loginModal').style.display='block'" class="w3-button w3-padding-large w3-large w3-margin-top curvedButton buttonOutline"><%=strings.Form_Login%></button>
      <button onclick="document.getElementById('signUpModal').style.display='block'" class="w3-button w3-padding-large w3-large w3-margin-top curvedButton buttonOutline"><%=strings.Form_SignUp%></button>
    </header>

    <!-- SignUp Modal -->
    <div id="signUpModal" class="modal">
      <span onclick="document.getElementById('signUpModal').style.display='none'" class="close" title="Close Modal">×</span>
      <form class="modal-content animate" action="signup" method="post">
        <div class="container">
          <label><b><%=strings.Form_Name%></b></label>
          <input type="text" placeholder="<%=strings.Form_Username_Placeholder%>" name="name" required>

          <label><b><%=strings.Form_Username%></b></label>
          <input type="text" placeholder="<%=strings.Form_Name_Placeholder%>" name="username" required>

          <label><b><%=strings.Form_Email%></b></label>
          <input type="email" placeholder="<%=strings.Form_Email_Placeholder%>" name="email" required>

          <label><b><%=strings.Form_Password%></b></label>
          <input type="password" placeholder="<%=strings.Form_Password_Placeholder%>" name="password" required>

          <div class="clearfix">
            <button type="submit" class="signupbtn"><%=strings.Form_SignUp%></button>
          </div>
        </div>
      </form>
    </div>

    <!-- Login Modal -->
    <div id="loginModal" class="modal">
      <span onclick="document.getElementById('loginModal').style.display='none'" class="close" title="Close Modal">×</span>
      <form class="modal-content animate" action="login" method="post">
        <div class="container">
          <label><b><%=strings.Form_Username%></b></label>
          <input type="text" placeholder="<%=strings.Form_Username_Placeholder%>" name="username" required>

          <label><b><%=strings.Form_Password%></b></label>
          <input type="password" placeholder="<%=strings.Form_Password_Placeholder%>" name="password" required>

          <div class="clearfix">
            <button type="submit" class="signupbtn"><%=strings.Form_Login%></button>
          </div>
        </div>
      </form>
    </div>

    <!-- First Grid -->
    <div class="w3-row-padding w3-padding-64 w3-container">
      <div class="w3-content">
        <div class="w3-twothird">
          <h1><%=strings.Index_1_Title%></h1>
          <h5 class="w3-padding-16"><%=strings.Index_1_Subtitle%></h5>
          <p class="w3-text-grey"><%=strings.Index_1_Text%></p>
        </div>
        <div class="w3-third w3-center">
          <i class="fa fa-anchor w3-padding-64 w3-text-red"></i>
        </div>
      </div>
    </div>

    <!-- Second Grid -->
    <div class="w3-row-padding w3-light-grey w3-padding-64 w3-container">
      <div class="w3-content">
        <div class="w3-third w3-center">
          <i class="fa fa-coffee w3-padding-64 w3-text-red w3-margin-right"></i>
        </div>
        <div class="w3-twothird">
          <h1><%=strings.Index_2_Title%></h1>
          <h5 class="w3-padding-16"><%=strings.Index_2_Subtitle%></h5>
          <p class="w3-text-grey"><%=strings.Index_2_Text%></p>
        </div>
      </div>
    </div>

    <!-- Third Grid -->
    <div class="w3-row-padding w3-padding-64 w3-container">
      <div class="w3-content">
          <div class="w3-twothird">
            <h1><%=strings.Index_3_Title%></h1>
            <h5 class="w3-padding-16"><%=strings.Index_3_Subtitle%></h5>
            <p class="w3-text-grey"><%=strings.Index_3_Text%></p>
          </div>
        <div class="w3-third w3-center">
          <i class="fa fa-briefcase w3-padding-64 w3-text-red"></i>
        </div>
      </div>
    </div>

    <!-- Fourth Grid -->
    <div class="w3-row-padding w3-light-grey w3-padding-64 w3-container">
      <div class="w3-content">
        <div class="w3-third w3-center">
          <i class="fa fa-cubes w3-padding-64 w3-text-red w3-margin-right"></i>
        </div>
        <div class="w3-twothird">
          <h1><%=strings.Index_4_Title%></h1>
          <h5 class="w3-padding-16"><%=strings.Index_4_Subtitle%></h5>
          <p class="w3-text-grey"><%=strings.Index_4_Text%></p>
        </div>
      </div>
    </div>

    <!-- Before Footer -->
    <div class="w3-container w3-black w3-center w3-opacity w3-padding-64">
        <h1 class="w3-margin w3-xlarge"><%=strings.Index_Footer%></h1>
    </div>

    <!-- Footer -->
    <footer class="w3-container w3-padding-64 w3-center w3-opacity">
      <div class="w3-xlarge w3-padding-32">
        <a href="https://www.facebook.com/theogygiaproject/"><i class="fa fa-facebook-official w3-hover-opacity"></i></a>
     </div>
     <p>Powered by <a href="https://ogygialoves.me" target="_blank">The Ogygia Project</a></p>
    </footer>

  </body>
</html>
